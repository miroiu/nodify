                              StrokeLineJoin="Round"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Data="M3 12a9 9 0 1 0 18 0 9 9 0 1 0-18 0" />
                    </Grid>
                </Viewbox>
            </DataTemplate>

            <DataTemplate x:Key="SquareIcon">
