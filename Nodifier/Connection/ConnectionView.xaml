<UserControl x:Class="Nodifier.Views.ConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nodifier.Views"
             xmlns:vm="clr-namespace:Nodifier"
             xmlns:nodify="https://miroiu.github.io/nodify"
             xmlns:s="clr-namespace:Nodifier.XAML"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:IConnection, IsDesignTimeCreatable=False}">
    <nodify:Connection Source="{Binding Source.Anchor}" 
                       Target="{Binding Target.Anchor}"
                       SplitCommand="{s:Action Split}"
                       DisconnectCommand="{s:Action Disconnect}"
                       Cursor="Hand" />
</UserControl>
